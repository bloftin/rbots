// motors
#define LEFT OUT_A
#define RIGHT OUT_C

// set timing for turns
#define TURN_TIME        50
#define STRAIGHT_TIME    200

task main()
{
  On(LEFT+RIGHT);

  // repeat the following forever
  while(true)
  {
      //turn right by reversing right tread
      Rev(RIGHT);
      Wait(TURN_TIME);

      //resume going straight
      Fwd(RIGHT);
      Wait(STRAIGHT_TIME);

      
    }
}
  
