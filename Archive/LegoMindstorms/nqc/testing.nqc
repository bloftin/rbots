// bugbot3.nqc - using multiple tasks

// sensors
#define LTurn SENSOR_1
#define RTurn SENSOR_3

// motors
#define LEFT OUT_A
#define RIGHT OUT_C

#define TIMER_LIMIT   10
#define COUNTER_LIMIT 6

int counter;

task main()
{

	// configure the sensors
	SetSensorType(LTurn,SENSOR_TYPE_ROTATION);
	SetSensorType(RTurn,SENSOR_TYPE_ROTATION);
	SetSensorMode(LTurn,SENSOR_MODE_ROTATION);
	SetSensorMode(RTurn,SENSOR_MODE_ROTATION);


	counter = 0;	

	CreateDatalog(1000);

	// start going forward
	Fwd(RIGHT);
	Fwd(LEFT);

	start watch_timer;
	//AddToDatalog(Timer(0));
	ClearSensor(LTurn);
      ClearSensor(RTurn);
	while(true)
	{
		On(RIGHT);
		On(LEFT);
		Fwd(RIGHT);
		Fwd(LEFT);

	}
	
}

task watch_timer()
{
	while(true)
	{
		until(Timer(0) > TIMER_LIMIT);
		PlayTone(440, 10);
		AddToDatalog(LTurn);
		AddToDatalog(RTurn);
		ClearTimer(0);
		//ClearSensor(LTurn);
		//ClearSensor(RTurn);
		counter=0;
	}
}
		

		
